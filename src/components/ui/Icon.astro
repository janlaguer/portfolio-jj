---
import { Image } from "astro:assets";
const { src, alt, height, type, content, loading = "lazy" } = Astro.props;
---

{
  type == "link" && (
    <a href={content} target="_blank">
      <Image {...{ src, alt, height, loading }} />
    </a>
  )
}
{
  type == "hover" && (
    <div class="tooltip" data-tip={content}>
      <Image {...{ src, alt, height, loading }} />
    </div>
  )
}
{!type && <Image {...{ src, alt, height, loading }} />}

<style>
  img {
    filter: invert(100%) sepia(3%) saturate(0%) hue-rotate(177deg)
      brightness(104%) contrast(104%);
  }
</style>
