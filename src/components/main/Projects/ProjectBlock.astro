---
import { Image } from "astro:assets";
import Icon from "@components/ui/Icon.astro";
import arrowUpRight from "@assets/icons/arrow-up-right.svg";
const { title, desc, img, link } = Astro.props;
---

<div
  class="flex flex-col gap-4 xl:flex-row-reverse xl:gap-8 xl:p-4 xl:rounded transition-all"
>
  <div>
    <h3
      class="text-xl tracking-tight font-medium flex gap-2 group-hover:hover:scale-105 transition-transform origin-bottom-left"
    >
      <a href={link} target="_blank">{title}</a>
      <Icon src={arrowUpRight} alt="Arrow Pointing Up Right" height="24px" />
    </h3>
    <p class="font-light">{desc}</p>
  </div>
  <Image src={img} alt="alt" />
</div>

<style>
  div > img {
    @apply outline-1 rounded shadow-lg w-1/2 xl:object-contain xl:w-1/4 xl:shadow-none;
  }
</style>
