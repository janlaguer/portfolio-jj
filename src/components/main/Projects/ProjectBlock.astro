---
import { Image } from "astro:assets";
const { title, desc, img } = Astro.props;
---

<div class="flex flex-col gap-4">
  <div>
    <h3 class="text-xl tracking-tight font-medium">{title}</h3>
    <p class="font-light">{desc}</p>
  </div>
  <Image src={img} alt="alt" />
</div>

<style>
  div > img {
    @apply outline-1 rounded shadow-lg w-1/2;
  }
</style>
